<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.NamaToko">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardt2"
            android:layout_width="match_parent"
            android:layout_height="100dp">

            <EditText
                android:id="@+id/ETCariToko"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="30dp"
                android:layout_below="@id/garis"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:hint="Cari Toko"
                android:padding="15dp"
                android:textColorHint="#595959"
                android:textStyle="normal|italic"
                android:background="@drawable/btnserach"/>

        </androidx.cardview.widget.CardView>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/NamaTokorecview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@id/cardt2" />

    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>