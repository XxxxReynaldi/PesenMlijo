<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:elevation="4dp"
    app:cardCornerRadius="5dp"
    app:cardUseCompatPadding="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/Rl1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="10dp"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/shop"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/shop" />

            <TextView
                android:id="@+id/belanja"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignLeft="@id/shop"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/roboto"
                android:text="Belanja"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/TvTgl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/belanja"
                android:layout_alignLeft="@id/shop"
                android:layout_marginLeft="50dp"
                android:fontFamily="@font/roboto_light"
                android:text="18 Mei 2021"
                android:textColor="#000"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/TvStatus"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:background="@drawable/card"
                android:fontFamily="@font/roboto"
                android:padding="4dp"
                android:text="Pesanan baru"
                android:textColor="#0D00A6"
                android:textSize="14dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_below="@id/TvTgl"
                android:layout_marginTop="20dp"
                android:background="#C4C4C4" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:layout_below="@id/Rl1">

            <!-- TextView Image-Produk -->
            <ImageView
                android:id="@+id/ImgProduk"
                android:layout_width="75dp"
                android:layout_height="100dp"
                android:layout_marginLeft="5dp"
                android:layout_marginBottom="5dp"
                android:src="@drawable/produk" />

            <!-- TextView Nama-Produk -->
            <TextView
                android:id="@+id/TVNamaPembeli"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/ImgProduk"
                android:fontFamily="@font/roboto"
                android:text="Nama Pembeli"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- TextView Harga-Produk -->

            <TextView
                android:id="@+id/TvJumlahProduk"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/TVNamaPembeli"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/ImgProduk"
                android:fontFamily="@font/roboto_light"
                android:text="1"
                android:textColor="#000000"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/TVHargaProduk"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:layout_below="@id/TVNamaPembeli"
                android:layout_alignLeft="@+id/rp"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="7dp"
                android:layout_toRightOf="@+id/ImgProduk"
                android:fontFamily="@font/roboto_light"
                android:text="Produk"
                android:textColor="#000000"
                android:textSize="16sp" />

            <Button
                android:id="@+id/BtnTolak"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/TVHargaProduk"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/ImgProduk"
                android:background="@drawable/btntolak"
                android:fontFamily="@font/roboto"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Tolak"
                android:textColor="#F44336"
                android:textSize="15dp" />

            <Button
                android:id="@+id/BtnTerima"
                android:layout_width="wrap_content"
                android:layout_height="32dp"
                android:layout_below="@id/TVHargaProduk"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="15dp"
                android:layout_toRightOf="@+id/BtnTolak"
                android:background="@drawable/button"
                android:fontFamily="@font/roboto"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:text="Terima"
                android:textColor="#ffffff"
                android:textSize="15dp" />

            <LinearLayout
                android:id="@+id/Detail"
                android:layout_alignParentRight="true"
                android:layout_width="wrap_content"
                android:layout_marginRight="10dp"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#00552E"
                android:textSize="18dp"
                android:fontFamily="@font/roboto"
                android:text="Detail"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_round_next"/>

            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</androidx.cardview.widget.CardView>