<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimaryWhite"
    tools:context=".activities.RegisterPembeli">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:id="@+id/iv_section1"
                android:layout_width="match_parent"
                android:layout_height="260dp">

                <ImageView
                    android:id="@+id/bulat"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="80dp"
                    android:src="@drawable/ellipse_2" />

                <ImageView
                    android:id="@+id/iv_ubijalar1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentEnd="true"
                    android:src="@drawable/daging" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/bulat"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="-40dp"
                    android:src="@drawable/daging2" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="64dp"
                    android:src="@drawable/vec" />

                <TextView
                    android:id="@+id/Tdaftar"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="75dp"
                    android:fontFamily="@font/roboto_medium_italic"
                    android:text="Daftar"
                    android:textColor="#1D6744"
                    android:textSize="28sp" />

                <TextView
                    android:id="@+id/Tsebagai"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Tdaftar"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/roboto_medium_italic"
                    android:text="Sebagai"
                    android:textColor="#1D6744"
                    android:textSize="33sp" />

                <TextView
                    android:id="@+id/Tvpembeli"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/Tsebagai"
                    android:layout_marginLeft="20dp"
                    android:fontFamily="@font/roboto_medium_italic"
                    android:text="Pembeli"
                    android:textColor="#1D6744"
                    android:textSize="45sp" />

            </RelativeLayout>


            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/daging1" />

            <FrameLayout
                android:id="@+id/main"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/iv_section1">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="10dp"
                    android:layout_marginRight="10dp">

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/nama"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <EditText
                            android:id="@+id/ETnama"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Nama"
                            android:textSize="20dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/alamat"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/nama"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/ETalamat"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Alamat"
                            android:textSize="20dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/notelp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/alamat"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/ETnotelp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="No. Telp"
                            android:textSize="20dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/email"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/notelp"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/ETemail"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Email"
                            android:textSize="20dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/katasandi"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/email"
                        android:layout_marginTop="5dp">

                        <EditText
                            android:id="@+id/ETkatasandi"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:ems="10"
                            android:fontFamily="@font/roboto"
                            android:hint="Alamat"
                            android:textSize="20dp" />

                    </com.google.android.material.textfield.TextInputLayout>

                    <Button
                        android:id="@+id/BtnDaftarPembeli"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/katasandi"
                        android:layout_marginTop="32dp"
                        android:background="@drawable/button2"
                        android:fontFamily="@font/roboto_bold"
                        android:text="Daftar"
                        android:textColor="#ffffff"
                        android:textSize="24dp" />

                </RelativeLayout>
            </FrameLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@id/main"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="10dp"
                android:gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text=" Sudah Punya Akun? "
                    android:textColor="#696969"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/masuk"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_bold"
                    android:text="Masuk"
                    android:textColor="#00552E"
                    android:textSize="16sp" />

            </LinearLayout>

        </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>