<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.ProfilActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="30dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/ImgProfil"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="50dp"
                android:src="@drawable/alin"
                app:civ_border_color="#000"
                app:civ_border_width="2dp"
                app:civ_shadow_radius="10" />

            <ImageButton
                android:id="@+id/ImgBtnFoto"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_below="@id/ImgProfil"
                android:layout_alignRight="@id/ImgProfil"
                android:layout_marginTop="-49dp"
                android:background="@drawable/buttonprofil"
                android:elevation="4dp"
                android:src="@drawable/ic_edit"
                android:textColor="#1CAE81" />

            <Button
                android:id="@+id/BtnEditProfil"
                android:layout_width="150dp"
                android:layout_height="32dp"
                android:layout_below="@id/ImgProfil"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="26dp"
                android:background="@drawable/button2"
                android:fontFamily="@font/roboto"
                android:onClick="EditProfile"
                android:text="Edit Profil"
                android:textColor="#FFF"
                android:textSize="18dp" />

            <LinearLayout
                android:id="@+id/atas"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/BtnEditProfil"
                android:layout_marginTop="30dp"
                android:layout_marginHorizontal="20dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto"
                    android:text="Nama"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TvNama"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Nama"
                    android:textColor="#696969"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="No. Telp"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TvNoTelp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="No Telp"
                    android:textColor="#696969"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="Email"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TvEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Email"
                    android:textColor="#696969"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="Provinsi"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TvProvinsi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Provinsi"
                    android:textColor="#696969"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="Kota / Kabupaten"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TvKota"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Kota / Kabupaten"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="Kecamatan"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TvKecamatan"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Kecamatan"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="Alamat Lengkap"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp" />

                <TextView
                    android:id="@+id/TvAlamat"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:fontFamily="@font/roboto"
                    android:text="Alamat lengkap"
                    android:textSize="18sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:fontFamily="@font/roboto"
                    android:text="Jam Buka - tutup"
                    android:textColor="#3D3D3D"
                    android:textSize="16sp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/TvJamBuka"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Buka"
                        android:textSize="18sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="10dp"
                        android:fontFamily="@font/roboto"
                        android:text="-"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/TvJamTutup"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:text="Tutup"
                        android:textSize="18sp" />

                </LinearLayout>

            </LinearLayout>


        </RelativeLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>