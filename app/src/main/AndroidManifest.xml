<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.semutunic.pesenmlijo">

    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_PROFILE" />
    <uses-permission android:name="android.permission.READ_CONTACTS" />
    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppThemeNoActionBar">
        <activity android:name=".activities.DetailToko"></activity>

        <activity
            android:name=".activities.NamaToko"
            android:label="Brokoli"
            android:parentActivityName=".activities.Kategori"
            android:theme="@style/AppThemeDarkActionBar" />

        <activity
            android:name=".activities.Kategori"
            android:label="Kategori"
            android:parentActivityName=".fragments.BerandaPembeliFragment"
            android:theme="@style/AppThemeDarkActionBar" />

        <activity android:name=".activities.MainActivity2"></activity>

        <activity
            android:name=".activities.RegisterPembeliActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>

        <activity
            android:name=".activities.Ditolak"
            android:label="Ditolak"
            android:parentActivityName=".fragments.PesananFragment"
            android:theme="@style/AppThemeDarkActionBar" />

        <activity
            android:name=".activities.Dibatalkan"
            android:label="Dibatalkan"
            android:parentActivityName=".fragments.PesananFragment"
            android:theme="@style/AppThemeDarkActionBar" />

        <activity
            android:name=".activities.Selesai"
            android:label="Selesai"
            android:parentActivityName=".fragments.PesananFragment"
            android:theme="@style/AppThemeDarkActionBar" />

        <activity
            android:name=".activities.DalamPengirimanPenjual"
            android:label="Dalam Pengiriman"
            android:parentActivityName=".fragments.PesananFragment"
            android:theme="@style/AppThemeDarkActionBar" />

        <activity
            android:name=".activities.SampaiTujuanPenjual"
            android:label="Sampai Tujuan"
            android:parentActivityName=".fragments.PesananFragment"
            android:theme="@style/AppThemeDarkActionBar" />

        <activity
            android:name=".activities.DalamProsesPenjual"
            android:label="Diproses"
            android:parentActivityName=".fragments.PesananFragment"
            android:theme="@style/AppThemeDarkActionBar" />
        <activity android:name=".activities.DetailProduk" />
        <activity
            android:name=".activities.TambahProduk"
            android:label="Tambah Produk"
            android:parentActivityName=".fragments.ProdukFragment"
            android:theme="@style/AppThemeDarkActionBar" />
        <activity
            android:name=".activities.PesananBaru"
            android:label="Pesanan Baru"
            android:parentActivityName=".fragments.PesananFragment"
            android:theme="@style/AppThemeDarkActionBar" />

        <activity android:name=".activities.SplashScreen"
            android:theme="@style/AppSplash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name=".activities.EditProfilActivity"
            android:label="Edit Profil"
            android:parentActivityName=".activities.ProfilActivity"
            android:windowSoftInputMode="stateAlwaysHidden"
            android:theme="@style/MaterialThemeDarkActionBar" />
        <activity
            android:name=".activities.ProfilActivity"
            android:label="Profil"
            android:parentActivityName=".fragments.AkunFragment"
            android:theme="@style/AppThemeDarkActionBar" />
        <activity android:name=".activities.SuksesRegisterActivity" />
        <activity
            android:name=".activities.RegisterPenjualActivity"
            android:windowSoftInputMode="stateAlwaysHidden"/>
        <activity
            android:name=".activities.LoginActivity"
            android:windowSoftInputMode="stateAlwaysHidden">

        </activity>

        <activity android:name=".activities.MainActivity">

        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>